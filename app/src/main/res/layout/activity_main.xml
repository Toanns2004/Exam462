<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"

        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewTinh"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_gravity="center|end"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textViewKq"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center|end"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textSize="40sp" />


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonPhanTram"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"
            android:background="@color/yellow"
            android:text="%"

            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="CE"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonNhan"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="x"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"/>


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:background="@color/blue"
            android:backgroundTint="#E31111"
            android:text="7"

            android:textSize="30sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonChia"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/buttonCong"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonTru"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:background="@color/blue"

            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonPhay"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text=","
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_margin="1dp"
            android:background="@color/blue"
            android:text="DE"

            android:textColor="@color/yellow"
            android:textSize="26sp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/buttonKetQua"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:background="@color/blue"
            android:layout_margin="1dp"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"/>



    </GridLayout>
</RelativeLayout>