<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCout"
            android:layout_width="match_parent"
            android:layout_height="100dp"


            android:layout_gravity="center|end"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewKq"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center|end"
            android:hint="0"
            android:textSize="30sp" />


    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonPhanTram"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/white"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="CE"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="C"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="x"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"/>


        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="7"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="8"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="9"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonChia"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="/"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="4"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="5"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="6"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/buttonNhan"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="+"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="2"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="3"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonTru"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="0"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/buttonPhay"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text=","
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"/>
        <Button
            android:id="@+id/buttonKetQua"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_columnWeight="1"/>












    </GridLayout>
</LinearLayout>